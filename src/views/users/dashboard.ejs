    <script>
        const recentTransactions = JSON.parse(atob('<%- Buffer.from(JSON.stringify(recentActivity || [])).toString("base64") %>'));

        function openTxnModal(index) {
            try {
                const txn = recentTransactions[index];
                if (!txn) return;

                document.getElementById('modalAmount').textContent = '₹' + parseFloat(txn.amount || 0).toLocaleString();
                document.getElementById('modalMachineId').textContent = txn.machine_id;
                document.getElementById('modalVendingStatus').textContent = (txn.trigger_status || 'Pending').toUpperCase();
                document.getElementById('modalTxnId').textContent = txn.razorpay_payment_id || txn.id || 'N/A';
                document.getElementById('modalDate').textContent = new Date(txn.event_time).toLocaleString();
                document.getElementById('modalMethod').textContent = txn.payment_method || 'QR Scan';
                document.getElementById('modalPayer').textContent = txn.customer_name || 'Anonymous';
                document.getElementById('modalUpi').textContent = txn.vpa || 'N/A';
                document.getElementById('modalVendingTime').textContent = txn.processed_at ? new Date(txn.processed_at).toLocaleString() : 'Not Processed';

                document.getElementById('txnModal').classList.remove('hidden');
            } catch (e) { console.error('Error opening modal', e); }
        }

        function closeTxnModal() {
            document.getElementById('txnModal').classList.add('hidden');
        }

        async function triggerRemoteSequence() {
            const machineId = document.getElementById('modalMachineId').textContent;
            if (!machineId) return;

            const btn = document.getElementById('triggerBtn');
            const originalText = btn.textContent;
            btn.disabled = true;
            btn.textContent = 'Triggering...';

            try {
                const response = await fetch(`/machines/control/${machineId}/sequence`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    },
                    body: JSON.stringify({ transaction_id: document.getElementById('modalTxnId').textContent })
                });
                const data = await response.json();
                if (data.success) {
                    alert('Sequence initiated successfully!');
                } else {
                    alert('Initiation failed: ' + (data.error || 'Unknown error'));
                }
            } catch (error) {
                alert('Cloud connection error');
            } finally {
                btn.disabled = false;
                btn.textContent = originalText;
            }
        }
    </script>

