    <!-- Safely inject data using a script tag with type application/json -->
    <script type="application/json" id="charts-data">
        <%- JSON.stringify(chartsData) %>
    </script>

    <script>
        // Read charts data safely from the DOM
        let chartsData = {};
        try {
            const dataElement = document.getElementById('charts-data');
            if (dataElement) {
                chartsData = JSON.parse(dataElement.textContent);
            }
        } catch (e) {
            console.error("Failed to parse charts data:", e);
        }

        // Global variables for global dashboard
        const isDark = document.documentElement.classList.contains('dark');

        // Theme Colors
        const getThemeColors = (isDark) => ({
            grid: isDark ? '#334155' : '#e2e8f0',
            text: isDark ? '#94a3b8' : '#64748b',
            bg: isDark ? '#1e293b' : '#ffffff'
        });

        function initCharts() {
            try {
                const isDark = document.documentElement.classList.contains('dark');
                const theme = getThemeColors(isDark);

                if (typeof Chart === 'undefined') {
                    console.error("Chart.js is not loaded.");
                    return;
                }

                Chart.defaults.font.family = "'Inter', sans-serif";
                Chart.defaults.color = theme.text;
                Chart.defaults.borderColor = theme.grid;

                // Direct access - no double parsing needed
                const revenueTrendData = chartsData.revenueTrend || [];
                const peakHoursData = chartsData.peakHours || [];
                const breakdownData = chartsData.machineBreakdown || [];

                console.log("Revenue Data:", revenueTrendData);

                // 1. Revenue
                const revCtx = document.getElementById('revenueTrendChart');
                if (revCtx) {
                    if (window.revenueChart) window.revenueChart.destroy();

                    const gradient = revCtx.getContext('2d').createLinearGradient(0, 0, 0, 400);
                    if (isDark) {
                        gradient.addColorStop(0, 'rgba(129, 140, 248, 0.5)'); // Indigo 400
                        gradient.addColorStop(1, 'rgba(30, 41, 59, 0)');     // Transparent
                    } else {
                        gradient.addColorStop(0, 'rgba(99, 102, 241, 0.5)'); // Indigo 500
                        gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');
                    }

                    window.revenueChart = new Chart(revCtx, {
                        type: 'line',
                        data: {
                            labels: revenueTrendData.map(r => r.date ? new Date(r.date).toLocaleDateString(undefined, { month: 'short', day: 'numeric' }) : ''),
                            datasets: [{
                                label: 'Revenue',
                                data: revenueTrendData.map(r => parseFloat(r.total || 0)),
                                borderColor: isDark ? '#818cf8' : '#6366f1',
                                backgroundColor: gradient,
                                fill: true,
                                tension: 0.4,
                                borderWidth: 3,
                                pointRadius: 4,
                                pointBackgroundColor: isDark ? '#818cf8' : '#6366f1',
                                pointHoverRadius: 6
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: { color: theme.grid, borderDash: [2, 4] },
                                    ticks: { color: theme.text }
                                },
                                x: { grid: { display: false }, ticks: { color: theme.text } }
                            },
                            plugins: { legend: { display: false } }
                        }
                    });
                }

                // 2. Peak Hours
                const peakCtx = document.getElementById('peakHoursChart');
                if (peakCtx) {
                    if (window.peakChart) window.peakChart.destroy();
                    window.peakChart = new Chart(peakCtx, {
                        type: 'bar',
                        data: {
                            labels: peakHoursData.map(p => `${p.hour}:00`),
                            datasets: [{
                                label: 'Transactions',
                                data: peakHoursData.map(p => p.count),
                                backgroundColor: isDark ? '#f472b6' : '#ec4899',
                                borderRadius: 6
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: { color: theme.grid },
                                    ticks: { color: theme.text }
                                },
                                x: { grid: { display: false }, ticks: { color: theme.text } }
                            },
                            plugins: { legend: { display: false } }
                        }
                    });
                }

                // 3. Machine Breakdown
                const breakCtx = document.getElementById('machineBreakdownChart');
                if (breakCtx) {
                    if (window.breakChart) window.breakChart.destroy();
                    window.breakChart = new Chart(breakCtx, {
                        type: 'bar',
                        data: {
                            labels: breakdownData.map(b => b.name),
                            datasets: [{
