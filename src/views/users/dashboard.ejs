                <!-- Details List -->
                <div class="space-y-3 mb-8">
                    <div class="flex justify-between items-center text-sm px-2">
                        <span
                            class="font-bold text-slate-400 dark:text-slate-500 uppercase text-[10px] tracking-widest">Cost/Cycle</span>
