    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-24">
        <% machines.forEach(machine=> { %>
            <div
                class="bg-white dark:bg-[#1e293b] rounded-3xl p-6 border border-slate-300 dark:border-slate-700/50 shadow-xl flex flex-col relative overflow-hidden group hover:border-indigo-500/30 transition-all">
