                if (window.revenueChart && data.revenue) {
                    window.revenueChart.data.labels = data.revenue.map(r => r.date ? new Date(r.date).toLocaleDateString(undefined, { month: 'short', day: 'numeric' }) : '');
                    window.revenueChart.data.datasets[0].data = data.revenue.map(r => parseFloat(r.total_revenue || 0));
