                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.406 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08.406-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-1">Cumulative</p>
                <h3 class="text-4xl font-black text-slate-900 dark:text-white tracking-tight">₹<%=
                        kpis.totalRevenue.toLocaleString() %>
                </h3>
            </div>
        </div>

        <!-- Today's Revenue -->
        <div
            class="bg-white dark:bg-[#1e293b] p-8 rounded-[2rem] shadow-sm border border-slate-300 dark:border-slate-700/50 flex items-center gap-6 group">
            <div
                class="w-20 h-20 rounded-3xl bg-indigo-500/10 dark:bg-indigo-500/5 flex items-center justify-center text-indigo-500 border border-indigo-500/10 group-hover:scale-110 transition-transform">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
            </div>
            <div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-1">Today's Pulse</p>
                <h3 class="text-4xl font-black text-slate-900 dark:text-white tracking-tight">₹<%=
                        kpis.todaySales.toLocaleString() %>
                </h3>
            </div>
        </div>

        <!-- Active Machines -->
        <div
            class="bg-white dark:bg-[#1e293b] p-8 rounded-[2rem] shadow-sm border border-slate-300 dark:border-slate-700/50 flex items-center gap-6 group">
            <div
                class="w-20 h-20 rounded-3xl bg-purple-500/10 dark:bg-purple-500/5 flex items-center justify-center text-purple-500 border border-purple-500/10 group-hover:scale-110 transition-transform">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
            </div>
            <div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-1">Online Now</p>
                <h3 class="text-4xl font-black text-slate-900 dark:text-white tracking-tight">
                    <%= kpis.activeMachines %><span class="text-xs text-slate-400 ml-1">Nodes</span>
                </h3>
            </div>
        </div>
    </div>

    <!-- Charts Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
        <!-- Revenue Trend -->
        <div class="bg-white dark:bg-slate-800 p-8 rounded-3xl shadow-sm border border-slate-300 dark:border-slate-700">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-bold text-slate-800 dark:text-white flex items-center gap-2">
                    <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                    </svg>
                    Revenue Trend
                </h3>
                <select onchange="updateRevenueChart('<%= owner.id %>', this.value)"
                    class="bg-slate-50 dark:bg-slate-700 border-none rounded-lg px-3 py-1 text-[10px] font-black uppercase tracking-widest text-slate-600 dark:text-slate-300 focus:ring-2 focus:ring-indigo-500 outline-none cursor-pointer">
                    <option value="today" <%=currentRange==='today' ? 'selected' : '' %>>Today</option>
                    <option value="7d" <%=currentRange==='7d' ? 'selected' : '' %>>7 Days</option>
                    <option value="30d" <%=currentRange==='30d' ? 'selected' : '' %>>30 Days</option>
                    <option value="3m" <%=currentRange==='3m' ? 'selected' : '' %>>3 Mo</option>
                    <option value="6m" <%=currentRange==='6m' ? 'selected' : '' %>>6 Mo</option>
                    <option value="all" <%=currentRange==='all' ? 'selected' : '' %>>All Time</option>
                </select>
            </div>
            <div class="h-64">
                <canvas id="revenueTrendChart"></canvas>
            </div>
        </div>

        <!-- Peak Trading Hours -->
        <div class="bg-white dark:bg-slate-800 p-8 rounded-3xl shadow-sm border border-slate-300 dark:border-slate-700">
            <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Peak Trading Hours
            </h3>
            <div class="h-64">
                <canvas id="peakHoursChart"></canvas>
            </div>
        </div>

        <!-- Machine Wise Breakdown -->
        <div class="bg-white dark:bg-slate-800 p-8 rounded-3xl shadow-sm border border-slate-300 dark:border-slate-700">
            <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
                </svg>
                Top Performing Units
            </h3>
            <div class="h-64">
                <canvas id="machineBreakdownChart"></canvas>
            </div>
        </div>

        <!-- Recent Activity Section (Moved Here) -->
        <div
            class="bg-white dark:bg-slate-800 p-8 rounded-3xl shadow-sm border border-slate-300 dark:border-slate-700 h-full flex flex-col">
            <h2 class="text-lg font-bold text-slate-800 dark:text-white mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Recent Activity
            </h2>
            <div class="overflow-y-auto flex-grow custom-scrollbar" style="max-height: 300px;">
                <table class="w-full text-left border-collapse">
                    <tbody
                        class="text-sm font-medium text-slate-600 dark:text-slate-300 divide-y divide-slate-100 dark:divide-slate-700/50">
                        <% if (locals.recentActivity && recentActivity.length> 0) { %>
                            <% recentActivity.forEach((txn, index)=> { %>
                                <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors cursor-pointer group"
                                    data-index="<%= index %>" onclick="openTxnModal(this.getAttribute('data-index'))">
                                    <td class="p-3">
                                        <div class="flex flex-col">
                                            <span class="font-bold text-slate-800 dark:text-white">
                                                <%= txn.machine_id %>
                                            </span>
                                            <span class="text-[10px] text-slate-400">
                                                <%= new Date(txn.event_time).toLocaleTimeString([], {hour: '2-digit' ,
                                                    minute:'2-digit'}) %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="p-3 text-right">
                                        <div class="font-bold text-emerald-500">₹<%=
                                                parseFloat(txn.amount).toLocaleString() %>
                                        </div>
                                        <span
                                            class="text-[9px] uppercase font-black <%= txn.trigger_status === 'processed' ? 'text-indigo-500' : (txn.trigger_status === 'failed' ? 'text-red-500 animate-pulse' : 'text-slate-400') %>">
                                            <%= txn.trigger_status==='processed' ? 'Processed' :
                                                (txn.trigger_status==='failed' ? 'Trigger Failed' : 'Captured' ) %>
                                        </span>
                                    </td>
                                    <td class="p-3 text-right">
                                        <button data-index="<%= index %>"
                                            onclick="event.stopPropagation(); openTxnModal(this.getAttribute('data-index'))"
                                            class="p-2 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg
                                            text-indigo-500 transition-colors">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="3"
                                                class="p-8 text-center text-slate-400 font-medium text-xs uppercase tracking-wider">
                                                No recent transactions</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mb-8 flex items-center gap-3">
        <div class="w-8 h-8 bg-emerald-500/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
            </svg>
        </div>
        <h2 class="text-xl font-bold text-slate-800 dark:text-white">Deployed Units</h2>
    </div>

