<%- include('../partials/header') %>

    <div class="mb-10 flex flex-col lg:flex-row justify-between items-start lg:items-end gap-6" x-data="{}">
        <div>
            <h1 class="text-4xl font-black text-slate-900 dark:text-white tracking-tight">Owner Management</h1>
            <p class="text-sm text-slate-500 dark:text-slate-400 mt-2 font-medium">Manage platform partners, monitor
                performance, and analyze growth.</p>
        </div>
        <div class="flex items-center gap-4">
            <!-- Premium Export Dropdown -->
            <div x-data="{ open: false }" class="relative">
                <button @click="open = !open" @click.away="open = false"
                    class="flex items-center gap-3 bg-white dark:bg-[#1e293b] border border-slate-200 dark:border-slate-800/50 px-5 py-3 rounded-2xl shadow-sm hover:border-indigo-500/50 transition-all group">
                    <svg class="w-4 h-4 text-slate-400 group-hover:text-indigo-400 transition-colors" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span
                        class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-600 dark:text-slate-400">Export
                        Partners</span>
                    <svg class="w-3 h-3 text-slate-400 group-hover:text-indigo-400 transition-transform"
                        :class="open ? 'rotate-180' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>

                <!-- Dropdown Menu -->
                <div x-show="open" x-transition:enter="transition ease-out duration-200"
                    x-transition:enter-start="opacity-0 scale-95 translate-y-2"
                    x-transition:enter-end="opacity-100 scale-100 translate-y-0"
                    x-transition:leave="transition ease-in duration-75"
                    x-transition:leave-start="opacity-100 scale-100 translate-y-0"
                    x-transition:leave-end="opacity-0 scale-95 translate-y-2"
                    class="absolute right-0 mt-3 w-48 bg-white dark:bg-[#1e293b] border border-slate-200 dark:border-slate-700 rounded-2xl shadow-2xl z-50 overflow-hidden">
                    <div class="p-2 space-y-1">
                        <a href="/users/export"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors group">
                            <span class="w-2 h-2 rounded-full bg-slate-400 group-hover:bg-slate-500"></span>
                            <span
                                class="text-[10px] font-black uppercase tracking-widest text-slate-600 dark:text-slate-400">Comma
                                Separated (CSV)</span>
                        </a>
                        <a href="/users/export-xlsx"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-emerald-50 dark:hover:bg-emerald-500/10 transition-colors group">
                            <span class="w-2 h-2 rounded-full bg-emerald-400 group-hover:bg-emerald-500"></span>
                            <span
                                class="text-[10px] font-black uppercase tracking-widest text-emerald-600 dark:text-emerald-400">Excel
                                Sheet (XLSX)</span>
                        </a>
                        <a href="/users/export-pdf"
                            class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-red-50 dark:hover:bg-red-500/10 transition-colors group">
                            <span class="w-2 h-2 rounded-full bg-red-400 group-hover:bg-red-500"></span>
                            <span
                                class="text-[10px] font-black uppercase tracking-widest text-red-600 dark:text-red-400">Printable
                                Report (PDF)</span>
                        </a>
                    </div>
                </div>
            </div>

            <button @click="$dispatch('open-modal', { mode: 'create' })"
                class="group bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3.5 px-8 rounded-2xl flex items-center shadow-[0_10px_25px_-5px_rgba(79,70,229,0.4)] transition-all active:scale-95 hover:-translate-y-0.5">
                <div class="bg-white/20 p-1.5 rounded-lg mr-3 group-hover:rotate-12 transition-transform duration-300">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" />
                    </svg>
                </div>
                Register New Partner
            </button>
        </div>
    </div>

    <!-- Error Alert -->
    <% if(typeof error !=='undefined' && error) { %>
        <div class="mb-6 bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-xl relative"
            role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline ml-1">
                <%= error %>
            </span>
        </div>
        <% } %>

            <!-- Owners Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-12">
                <% users.forEach(owner=> { %>
                    <div
                        class="bg-white dark:bg-[#1e293b] rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.04)] dark:shadow-none border border-slate-300 dark:border-slate-700/50 p-8 flex flex-col h-full transition-all hover:shadow-xl hover:border-indigo-500/30 dark:hover:border-indigo-500/30 group relative overflow-hidden">

                        <!-- Header / Profile Section -->
                        <div class="flex items-start justify-between mb-8">
                            <div class="flex items-center gap-5">
                                <div
                                    class="w-20 h-20 rounded-2xl bg-slate-50 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 flex items-center justify-center text-3xl font-black text-indigo-500 dark:text-indigo-400 group-hover:scale-110 transition-transform shadow-inner relative">
                                    <%= owner.username.charAt(0) %>
                                        <div
                                            class="absolute -bottom-1 -right-1 w-6 h-6 rounded-full border-4 border-white dark:border-[#1e293b] <%= owner.status === 'blocked' ? 'bg-red-500' : 'bg-emerald-500' %>">
                                        </div>
                                </div>
                                <div>
                                    <h3
                                        class="text-2xl font-black text-slate-900 dark:text-white tracking-tight leading-none <%= owner.status === 'blocked' ? 'opacity-40' : '' %>">
                                        <%= owner.username %>
                                    </h3>
                                    <div class="flex items-center gap-3 mt-2">
                                        <a href="/users/dashboard/<%= owner.id %>"
                                            class="text-[10px] font-black uppercase tracking-widest text-indigo-600 dark:text-emerald-400 flex items-center gap-1 group/link">
                                            Insight Dashboard
                                            <svg class="w-3 h-3 group-hover/link:translate-x-0.5 transition-transform"
                                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
                                                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <button
                                @click="$dispatch('open-modal', { mode: 'edit', user: <%= JSON.stringify(owner) %> })"
                                class="p-2.5 bg-slate-50 dark:bg-slate-800 rounded-xl text-slate-400 hover:text-indigo-500 border border-slate-300 dark:border-slate-700 transition-all shadow-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                </svg>
                            </button>
                        </div>

                        <!-- Highlights Section -->
                        <div class="grid grid-cols-2 gap-4 mb-6">
                            <div class="bg-indigo-500/[0.03] p-5 rounded-3xl border border-indigo-500/10">
                                <span
                                    class="text-[10px] font-black uppercase tracking-widest text-indigo-500/50 block mb-1">Managed
                                    Units</span>
                                <div class="flex items-end gap-1">
                                    <span class="text-3xl font-black text-slate-900 dark:text-white leading-none">
                                        <%= owner.machine_count %>
                                    </span>
                                    <span class="text-[10px] font-black text-slate-400 uppercase mb-0.5">PTS</span>
                                </div>
                            </div>
                            <div class="bg-emerald-500/[0.03] p-5 rounded-3xl border border-emerald-500/10">
                                <span
                                    class="text-[10px] font-black uppercase tracking-widest text-emerald-500/50 block mb-1">Today</span>
                                <div class="flex items-end gap-0.5">
                                    <span class="text-[10px] font-black text-emerald-500 uppercase mb-0.5 mr-1">₹</span>
                                    <span class="text-3xl font-black text-slate-900 dark:text-white leading-none">
                                        <%= owner.today_revenue.toLocaleString() %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Total Revenue Anchor -->
                        <div
                            class="bg-slate-900 dark:bg-slate-800/50 rounded-3xl p-6 mb-8 relative overflow-hidden group/rev transition-all border border-slate-800 dark:border-slate-700/50 shadow-xl">
                            <div
                                class="absolute inset-0 bg-gradient-to-br from-indigo-500/20 to-transparent opacity-50">
                            </div>
                            <div class="relative z-10">
                                <span
                                    class="text-[10px] font-bold uppercase tracking-[0.2em] text-indigo-300/60 block mb-1">Cumulative
                                    Earnings</span>
                                <p class="text-4xl font-black text-white tracking-tighter">₹<%=
                                        owner.total_revenue.toLocaleString() %>
                                </p>
                            </div>
                            <div
                                class="absolute bottom-0 right-0 p-4 opacity-10 group-hover/rev:scale-125 transition-transform">
                                <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0-2.08-.402-2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                                    </path>
                                </svg>
                            </div>
                        </div>

                        <!-- Connect Detail -->
                        <div
                            class="space-y-4 mb-8 bg-slate-50 dark:bg-slate-800/30 p-5 rounded-3xl border border-slate-300 dark:border-slate-700/30 flex-grow">
                            <div class="flex items-center gap-4 text-sm">
                                <div
                                    class="w-8 h-8 rounded-lg bg-white dark:bg-slate-700 flex items-center justify-center text-slate-400 shadow-sm">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                                        </path>
                                    </svg>
                                </div>
                                <span class="font-bold text-slate-700 dark:text-slate-300 truncate">
                                    <%= owner.phone || 'NO CONTACT' %>
                                </span>
                            </div>
                            <div class="flex items-center gap-4 text-sm">
                                <div
                                    class="w-8 h-8 rounded-lg bg-white dark:bg-slate-700 flex items-center justify-center text-slate-400 shadow-sm">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 01-2 2v10a2 2 0 012 2z">
                                        </path>
                                    </svg>
                                </div>
                                <span class="font-bold text-slate-700 dark:text-slate-300 truncate">
                                    <%= owner.email || 'NO EMAIL' %>
                                </span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="flex gap-3 mt-auto">
                            <form action="/users/toggle-status/<%= owner.id %>" method="POST" class="flex-grow">
                                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                                <button type="submit"
                                    class="w-full py-4 px-6 font-black text-[10px] uppercase tracking-[0.2em] rounded-2xl transition-all active:scale-95 shadow-lg <%= owner.status === 'blocked' ? 'bg-emerald-600 hover:bg-emerald-500 text-white shadow-emerald-500/20' : 'bg-slate-900 dark:bg-slate-800 hover:bg-slate-800 dark:hover:bg-slate-700 text-slate-300 dark:text-slate-200 border border-slate-800 dark:border-slate-700/50' %>">
                                    <%= owner.status==='blocked' ? 'Grant Access' : 'Revoke Access' %>
                                </button>
                            </form>
                            <form action="/users/delete/<%= owner.id %>" method="POST"
                                onsubmit="return confirm('Delete this owner? Actions are permanent.')">
                                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                                <button type="submit"
                                    class="p-4 bg-red-500/10 text-red-500 rounded-2xl hover:bg-red-500 hover:text-white transition-all active:scale-95 border border-red-500/20 shadow-sm">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <% if(users.length===0) { %>
                <div class="py-24 text-center">
                    <div
                        class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-slate-100 dark:bg-slate-800 mb-4">
                        <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white">No owners found</h3>
                    <p class="text-slate-500 dark:text-slate-400 max-w-xs mx-auto mt-2">Start by adding your first
                        platform owner.</p>
                </div>
                <% } %>

                    <!-- Modal -->
                    <div x-data="{ open: false, mode: 'create', user: {} }" x-show="open"
                        @open-modal.window="open = true; mode = $event.detail.mode; user = $event.detail.user || {}"
                        x-cloak class="fixed z-50 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog"
                        aria-modal="true">

                        <!-- Fixed Backdrop -->
                        <div x-show="open" x-transition.opacity
                            class="fixed inset-0 bg-slate-900/40 backdrop-blur-[2px]" @click="open = false"></div>

                        <!-- Content Wrapper -->
                        <div
                            class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                            <span class="hidden sm:inline-block sm:align-middle sm:h-screen"
                                aria-hidden="true">&#8203;</span>

                            <!-- Modal Box -->
                            <div x-show="open" x-transition.scale.95
                                class="relative z-10 inline-block align-bottom bg-white dark:bg-slate-800 rounded-3xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-slate-300 dark:border-slate-700">
                                <form :action="mode === 'create' ? '/users/create' : '/users/update/' + user.id"
                                    method="POST">
                                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                                    <div class="px-8 pt-8 pb-6">
                                        <div class="flex justify-between items-center mb-6">
                                            <h3 class="text-2xl font-bold text-slate-900 dark:text-white"
                                                x-text="mode === 'create' ? 'Add Owner' : 'Update Profile'"></h3>
                                            <button type="button" @click="open = false"
                                                class="text-slate-400 hover:text-slate-500"><svg class="w-6 h-6"
                                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                </svg></button>
                                        </div>

                                        <div class="space-y-5">
                                            <div>
                                                <label
                                                    class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2">Full
                                                    Name / Username</label>
                                                <input type="text" name="username" required :value="user.username"
                                                    class="block w-full px-4 py-3 bg-slate-50 dark:bg-slate-700/50 border border-slate-300 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all outline-none">
                                            </div>

                                            <div class="grid grid-cols-2 gap-4">
                                                <div>
                                                    <label
                                                        class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2">Email</label>
                                                    <input type="email" name="email" :value="user.email"
                                                        class="block w-full px-4 py-3 bg-slate-50 dark:bg-slate-700/50 border border-slate-300 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all outline-none">
                                                </div>
                                                <div>
                                                    <label
                                                        class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2">Phone</label>
                                                    <input type="text" name="phone" :value="user.phone"
                                                        class="block w-full px-4 py-3 bg-slate-50 dark:bg-slate-700/50 border border-slate-300 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all outline-none">
                                                </div>
                                            </div>

                                            <div>
                                                <label
                                                    class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-2"
                                                    x-text="mode === 'create' ? 'Password' : 'New Password (Optional)'"></label>
                                                <input type="password" name="password" :required="mode === 'create'"
                                                    class="block w-full px-4 py-3 bg-slate-50 dark:bg-slate-700/50 border border-slate-300 dark:border-slate-600 rounded-xl text-slate-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all outline-none">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="px-8 pb-8 pt-4 flex gap-3">
                                        <button type="submit"
                                            class="flex-grow py-3 px-6 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl shadow-lg shadow-indigo-500/30 transition-all active:scale-95"
                                            x-text="mode === 'create' ? 'Create Owner' : 'Apply Changes'"></button>
                                        <button type="button" @click="open = false"
                                            class="py-3 px-6 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-200 font-bold rounded-xl hover:bg-slate-200 dark:hover:bg-slate-600 transition-all">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <%- include('../partials/footer') %>