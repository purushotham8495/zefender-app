<%- include('partials/header') %>

    <div class="min-h-screen flex items-center justify-center bg-slate-50 dark:bg-[#0f172a] p-6">
        <div
            class="max-w-md w-full bg-white dark:bg-slate-900 rounded-[2.5rem] border border-slate-300 dark:border-slate-800 p-10 shadow-2xl text-center">
            <div
                class="w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-red-600 dark:text-red-500" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                    </path>
                </svg>
            </div>
            <h1 class="text-2xl font-black text-slate-900 dark:text-white mb-2 uppercase tracking-tight">System Error
            </h1>
            <p class="text-slate-500 dark:text-slate-400 text-sm mb-8 font-medium leading-relaxed">
                <%= message %>
            </p>
            <a href="/"
                class="inline-block bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-bold px-8 py-3 rounded-xl transition-all hover:scale-105 active:scale-95 shadow-lg">
                Return Home
            </a>
        </div>
    </div>

    <%- include('partials/footer') %>