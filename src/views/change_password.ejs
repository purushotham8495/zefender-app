<%- include('partials/header') %>

    <div class="max-w-7xl mx-auto px-6 py-12 flex items-center justify-center min-h-[80vh]">
        <div class="w-full max-w-lg relative transition-all duration-700 animate-in fade-in slide-in-from-bottom-8">
            <!-- Background Glow -->
            <div
                class="absolute -top-24 -right-24 w-64 h-64 bg-indigo-500/10 rounded-full blur-[100px] -z-10 animate-pulse">
            </div>
            <div class="absolute -bottom-24 -left-24 w-64 h-64 bg-emerald-500/5 rounded-full blur-[100px] -z-10 animate-pulse"
                style="animation-delay: -3s"></div>

            <div
                class="bg-white dark:bg-white/[0.02] backdrop-blur-3xl rounded-[2.5rem] border border-slate-300 dark:border-slate-700/50 shadow-2xl overflow-hidden relative">
                <!-- Header Section -->
                <div class="p-10 border-b border-slate-100 dark:border-slate-700/50 bg-slate-50 dark:bg-white/[0.02]">
                    <div class="flex items-center gap-6 mb-4">
                        <div
                            class="w-14 h-14 rounded-2xl bg-indigo-500/10 border border-indigo-500/20 flex items-center justify-center text-indigo-400">
                            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                        <div>
                            <h2
                                class="text-2xl font-black text-slate-900 dark:text-white tracking-tight uppercase tracking-[0.1em]">
                                Secure
                                Vault</h2>
                            <p class="text-[10px] text-slate-500 font-black uppercase tracking-[0.2em] mt-1">Credential
                                Synchronization Protocol</p>
                        </div>
                    </div>
                </div>

                <div class="p-10">
                    <!-- Status Messages -->
                    <% if(error) { %>
                        <div
                            class="mb-8 p-4 bg-red-500/10 border border-red-500/20 rounded-2xl flex items-center gap-4 animate-in zoom-in duration-300">
                            <div
                                class="flex-shrink-0 w-8 h-8 rounded-xl bg-red-500/20 flex items-center justify-center text-red-500">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                            </div>
                            <p class="text-[11px] font-black text-red-400 uppercase tracking-wider leading-tight">
                                <%= error %>
                            </p>
                        </div>
                        <% } %>

                            <% if(success) { %>
                                <div
                                    class="mb-8 p-4 bg-emerald-500/10 border border-emerald-500/20 rounded-2xl flex items-center gap-4 animate-in zoom-in duration-300">
                                    <div
                                        class="flex-shrink-0 w-8 h-8 rounded-xl bg-emerald-500/20 flex items-center justify-center text-emerald-500">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M5 13l4 4L19 7" />
                                        </svg>
                                    </div>
                                    <p
                                        class="text-[11px] font-black text-emerald-400 uppercase tracking-wider leading-tight">
                                        <%= success %>
                                    </p>
                                </div>
                                <% } %>

                                    <form action="/change-password" method="POST" class="space-y-8">
                                        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">

                                        <!-- Input Fields -->
                                        <div class="space-y-3">
                                            <label
                                                class="block text-[10px] font-black text-slate-500 uppercase tracking-[0.25em] ml-2">Legacy
                                                Passcode</label>
                                            <div class="relative group">
                                                <input type="password" name="oldPassword" required
                                                    class="w-full bg-slate-50 dark:bg-white/[0.03] border border-slate-300 dark:border-white/10 rounded-2xl px-6 py-4 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500/30 outline-none transition-all placeholder:text-slate-400 dark:placeholder:text-slate-700 shadow-inner"
                                                    placeholder="CURRENT IDENTITY KEY">
                                                <div
                                                    class="absolute inset-0 rounded-2xl bg-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="space-y-3">
                                            <label
                                                class="block text-[10px] font-black text-slate-500 uppercase tracking-[0.25em] ml-2">Terminal
                                                Update</label>
                                            <div class="relative group">
                                                <input type="password" name="newPassword" required
                                                    class="w-full bg-slate-50 dark:bg-white/[0.03] border border-slate-300 dark:border-white/10 rounded-2xl px-6 py-4 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500/30 outline-none transition-all placeholder:text-slate-400 dark:placeholder:text-slate-700 shadow-inner"
                                                    placeholder="NEW PASSCODE STRING">
                                                <div
                                                    class="absolute inset-0 rounded-2xl bg-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="space-y-3">
                                            <label
                                                class="block text-[10px] font-black text-slate-500 uppercase tracking-[0.25em] ml-2">Integrity
                                                Verification</label>
                                            <div class="relative group">
                                                <input type="password" name="confirmPassword" required
                                                    class="w-full bg-slate-50 dark:bg-white/[0.03] border border-slate-300 dark:border-white/10 rounded-2xl px-6 py-4 text-slate-900 dark:text-white text-sm focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500/30 outline-none transition-all placeholder:text-slate-400 dark:placeholder:text-slate-700 shadow-inner"
                                                    placeholder="REPEAT NEW PASSCODE">
                                                <div
                                                    class="absolute inset-0 rounded-2xl bg-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Button -->
                                        <div class="pt-6">
                                            <button type="submit"
                                                class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-black text-[10px] uppercase tracking-[0.3em] py-5 rounded-2xl transition-all active:scale-[0.98] shadow-lg shadow-indigo-600/20 group overflow-hidden relative">
                                                <span class="relative z-10">Commit Security Update</span>
                                                <div
                                                    class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000">
                                                </div>
                                            </button>
                                        </div>
                                    </form>

                                    <div
                                        class="mt-10 pt-8 border-t border-slate-100 dark:border-white/5 flex justify-center text-[9px] font-black text-slate-600 uppercase tracking-[0.3em]">
                                        System Security Version: X-2.10.5
                                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>