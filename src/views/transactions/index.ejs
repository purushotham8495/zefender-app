<%- include('../partials/header') %>

    <div x-data="{ 
        showModal: false, 
        activeTx: {},
        isTriggering: false,
        openDetails(tx) {
            this.activeTx = tx;
            this.showModal = true;
        },
        async triggerSequence() {
            if (!this.activeTx.machine_id) return;
            this.isTriggering = true;
            try {
                const response = await fetch(`/machines/control/${this.activeTx.machine_id}/sequence`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': '<%= csrfToken %>'
                    },
                    body: JSON.stringify({ transaction_id: this.activeTx.id })
                });
                const data = await response.json();
                if (data.success) {
                    alert('Sequence triggered successfully!');
                } else {
                    alert('Trigger failed: ' + (data.error || 'Unknown error'));
                }
            } catch (error) {
                alert('Connection error');
            } finally {
                this.isTriggering = false;
            }
        }
    }"
